{
	"name": "superconductor-monorepo",
	"version": "0.1.0",
	"author": {
		"name": "SuperFlyTV AB",
		"email": "info@superfly.tv",
		"url": "https://superfly.tv"
	},
	"repository": "https://github.com/SuperFlyTV/SuperConductor",
	"private": true,
	"engines": {
		"node": "20"
	},
	"workspaces": [
		"shared/**",
		"apps/**",
		"tests/**"
	],
	"scripts": {
		"version": "node scripts/version.js",
		"postinstall": "husky",
		"lerna": "lerna",
		"lint:raw": "eslint --ext .js,.jsx,.ts,.tsx",
		"lint": "run lint:raw .",
		"lintfix": "run lint --fix",
		"build": "lerna run build",
		"build:binary": "lerna run build:binary",
		"build:shared": "lerna run build --stream --scope=@shared/*",
		"build:shared:changed": "lerna run build --stream --scope=@shared/* --since head --exclude-dependents --stream",
		"start": "yarn && run build:shared && run dev:electron",
		"start:all": "run build:shared && lerna run dev --stream",
		"start:bridge": "run build:shared && run dev:bridge",
		"dev:electron": "lerna run dev --stream --scope=superconductor",
		"dev:bridge": "lerna run dev --stream --scope=tsr-bridge",
		"test": "lerna run test",
		"license-validate": "node scripts/license-check.js",
		"release:bump": "lerna version --force-publish --no-push",
		"release:prerelease": "lerna version prerelease --force-publish --no-push",
		"release:preminor": "lerna version preminor --force-publish --no-push"
	},
	"resolutions": {
		"app-builder-bin": "npm:@julusian/app-builder-bin@4.0.1",
		"threadedclass": "^1.2.1",
		"serialport": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.0.2.tgz"
	},
	"devDependencies": {
		"@sofie-automation/eslint-plugin": "^0.1.1",
		"@tsconfig/node20": "^20.1.4",
		"@types/jest": "^29.5.13",
		"@types/lodash": "^4.17.10",
		"@types/lodash-es": "^4.17.12",
		"@types/node": "^20.16.11",
		"@types/shelljs": "^0",
		"@typescript-eslint/eslint-plugin": "^8.8.1",
		"@typescript-eslint/parser": "^8.8.1",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^8.10.0",
		"eslint-plugin-jest": "^28.8.3",
		"eslint-plugin-n": "^17.11.1",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.37.1",
		"eslint-plugin-react-hooks": "^4.6.2",
		"husky": "^9.1.6",
		"jest": "^29.7.0",
		"lerna": "^6.6.2",
		"lint-staged": "^15.2.10",
		"prettier": "^2.8.8",
		"rimraf": "^6.0.1",
		"shelljs": "^0.8.5",
		"ts-jest": "^29.2.5",
		"typescript": "~5.1"
	},
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	},
	"packageManager": "yarn@4.5.0"
}
