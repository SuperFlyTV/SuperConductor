{
	"name": "superconductor",
	"private": true,
	"version": "0.12.0-alpha.5",
	"description": "A playout client for Windows, Linux or MacOS to control CasparCG, Atem, OBS and more!",
	"main": "dist/main.mjs",
	"type": "module",
	"engines": {
		"node": "20"
	},
	"scripts": {
		"build": "run -B -T rimraf ./dist && run -B -T tsc && webpack",
		"build:electron": "run -B -T tsc -p tsconfig.electron.json",
		"build:binary": "electron-builder",
		"start": "run build && electron dist/main.mjs",
		"react:dev": "webpack serve --mode=development",
		"electron:dev": "nodemon",
		"dev": "concurrently --kill-others \"yarn react:dev\" \"yarn electron:dev\"",
		"test": "jest"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/SuperFlyTV/SuperConductor.git"
	},
	"keywords": [],
	"author": {
		"name": "SuperFlyTV AB",
		"email": "info@superfly.tv",
		"url": "https://superfly.tv"
	},
	"license": "AGPL-3.0-or-later",
	"bugs": {
		"url": "https://github.com/SuperFlyTV/SuperConductor/issues"
	},
	"homepage": "https://github.com/SuperFlyTV/SuperConductor#readme",
	"devDependencies": {
		"@types/deep-extend": "0.4.32",
		"@types/jest": "^29.5.13",
		"@types/koa": "^2.15.0",
		"@types/koa-bodyparser": "^4.3.12",
		"@types/koa__router": "^12.0.4",
		"@types/moment": "^2.13.0",
		"@types/react": "^18.3.11",
		"@types/react-dom": "^18.3.0",
		"@types/react-tabs": "^5.0.5",
		"@types/react-toggle": "^4.0.5",
		"@welldone-software/why-did-you-render": "^7.0.1",
		"concurrently": "^7.6.0",
		"css-loader": "^6.11.0",
		"electron": "^32.2.0",
		"electron-builder": "24.13.3",
		"electron-notarize": "^1.2.2",
		"html-webpack-plugin": "^5.6.0",
		"jest": "^29.7.0",
		"nodemon": "^2.0.22",
		"sass": "^1.79.4",
		"sass-loader": "^13.3.3",
		"style-loader": "^3.3.4",
		"ts-jest": "^29.2.5",
		"ts-loader": "^9.5.1",
		"typed-emitter": "^2.1.0",
		"webpack": "^5.95.0",
		"webpack-cli": "^4.10.0",
		"webpack-dev-server": "^4.15.2"
	},
	"dependencies": {
		"@babel/core": "^7.25.8",
		"@emotion/react": "^11.13.3",
		"@emotion/styled": "^11.13.0",
		"@feathersjs/errors": "^5.0.30",
		"@feathersjs/feathers": "^5.0.30",
		"@feathersjs/koa": "^5.0.30",
		"@feathersjs/socketio": "^5.0.30",
		"@feathersjs/socketio-client": "^5.0.30",
		"@fontsource/barlow": "^4.5.9",
		"@fontsource/barlow-condensed": "^4.5.9",
		"@fontsource/barlow-semi-condensed": "^4.5.10",
		"@koa/router": "^12.0.2",
		"@mui/icons-material": "^5.16.7",
		"@mui/material": "^5.16.7",
		"@shared/api": "^0.12.0-alpha.5",
		"@shared/lib": "^0.12.0-alpha.5",
		"@shared/models": "^0.12.0-alpha.5",
		"@shared/server-lib": "^0.12.0-alpha.5",
		"@shared/tsr-bridge": "^0.12.0-alpha.5",
		"@sofie-automation/sorensen": "^1.4.3",
		"axios": "^1.7.7",
		"bufferutil": "^4.0.8",
		"classnames": "^2.5.1",
		"deep-extend": "^0.6.0",
		"deepmerge-ts": "^5.1.0",
		"electron-updater": "^6.3.9",
		"file-loader": "^6.2.0",
		"formik": "^2.2.9",
		"formik-mui": "^5.0.0-alpha.0",
		"got": "^11.8.6",
		"graphics-data-definition": "1.1.1",
		"koa": "^2.15.3",
		"koa-bodyparser": "^4.4.1",
		"lodash": "^4.17.21",
		"mobx": "^6.13.3",
		"mobx-react-lite": "^4.0.7",
		"moment": "^2.30.1",
		"notistack": "^2.0.8",
		"prop-types": "^15.8.1",
		"react": "^18.3.1",
		"react-contexify": "^6.0.0",
		"react-dnd": "^16.0.1",
		"react-dnd-html5-backend": "^16.0.1",
		"react-dom": "^18.3.1",
		"react-icons": "^5.3.0",
		"react-toggle": "^4.1.3",
		"react-visibility-sensor": "^5.1.1",
		"semver": "^7.6.3",
		"short-uuid": "^5.2.0",
		"socket.io-client": "^4.8.0",
		"superfly-timeline": "^8.3.1",
		"timeline-state-resolver-types": "^8.1.2",
		"tiny-warning": "^1.0.3",
		"type-fest": "^4.26.1",
		"url": "^0.11.4",
		"utf-8-validate": "^6.0.4",
		"winston": "^3.15.0",
		"winston-daily-rotate-file": "^4.7.1",
		"winston-transport": "^4.8.0",
		"yup": "1.4.0"
	},
	"build": {
		"productName": "SuperConductor",
		"appId": "tv.superfly.superconductor",
		"mac": {
			"category": "public.app-category.utilities",
			"hardenedRuntime": true,
			"gatekeeperAssess": false,
			"entitlements": "entitlements.mac.plist",
			"entitlementsInherit": "entitlements.mac.plist",
			"extraFiles": [
				{
					"from": "../../node_modules/sharp/vendor/8.13.3/darwin-x64/lib",
					"to": "Frameworks",
					"filter": [
						"!glib-2.0/**/*"
					]
				}
			]
		},
		"win": {
			"extraFiles": [
				{
					"from": "../../node_modules/sharp/build/Release",
					"to": ".",
					"filter": [
						"lib*.dll"
					]
				}
			]
		},
		"linux": {
			"extraFiles": [
				{
					"from": "../../node_modules/sharp/vendor/8.13.3/linux-x64/lib",
					"to": ".",
					"filter": [
						"libvips*.so.*"
					]
				}
			]
		},
		"dmg": {
			"artifactName": "SuperConductor ${version} macOS Installer.${ext}"
		},
		"nsis": {
			"artifactName": "SuperConductor ${version} Windows Installer.${ext}"
		},
		"appImage": {
			"artifactName": "SuperConductor ${version} Linux Executable.${ext}"
		},
		"afterSign": "tools/notarize.js",
		"files": [
			"dist/**/*"
		]
	}
}
