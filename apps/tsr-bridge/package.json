{
	"name": "tsr-bridge",
	"private": true,
	"version": "0.12.0-alpha.5",
	"description": "A companion app to SuperConductor, to handle playout on another computer",
	"main": "dist/main.js",
	"engines": {
		"node": "20"
	},
	"scripts": {
		"build": "rimraf ./dist && run -B -T tsc && webpack",
		"build:binary": "electron-builder",
		"start": "yarn build && electron dist/main.js",
		"react:dev": "webpack serve --mode=development",
		"electron:dev": "nodemon",
		"dev": "concurrently --kill-others \"yarn react:dev\" \"yarn electron:dev\"",
		"lint:raw": "eslint --ext .ts --ext .js --ext .tsx --ext .jsx --ignore-pattern dist"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/SuperFlyTV/SuperConductor.git"
	},
	"author": {
		"name": "SuperFlyTV AB",
		"email": "info@superfly.tv",
		"url": "https://superfly.tv"
	},
	"license": "AGPL-3.0-or-later",
	"devDependencies": {
		"@types/react-toggle": "^4.0.5",
		"@types/triple-beam": "^1.3.5",
		"concurrently": "^7.6.0",
		"css-loader": "^6.11.0",
		"electron": "^32.2.0",
		"electron-builder": "25.1.7",
		"electron-notarize": "^1.2.2",
		"html-webpack-plugin": "^5.6.0",
		"node-loader": "^2.0.0",
		"nodemon": "^2.0.22",
		"rimraf": "^3.0.2",
		"sass": "^1.79.4",
		"sass-loader": "^13.3.3",
		"style-loader": "^3.3.4",
		"ts-loader": "^9.5.1",
		"webpack": "^5.95.0",
		"webpack-cli": "^4.10.0",
		"webpack-dev-server": "^4.15.2"
	},
	"dependencies": {
		"@babel/core": "^7.25.8",
		"@mui/material": "^5.16.7",
		"@shared/api": "^0.12.0-alpha.5",
		"@shared/lib": "^0.12.0-alpha.5",
		"@shared/models": "^0.12.0-alpha.5",
		"@shared/server-lib": "^0.12.0-alpha.5",
		"@shared/tsr-bridge": "^0.12.0-alpha.5",
		"classnames": "^2.5.1",
		"electron-updater": "^6.3.9",
		"lodash": "^4.17.21",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-icons": "^4.12.0",
		"react-scroll-to-bottom": "^4.2.0",
		"react-toggle": "^4.1.3",
		"short-uuid": "^5.2.0",
		"winston": "^3.15.0",
		"winston-transport": "^4.8.0"
	},
	"prettier": "@sofie-automation/code-standard-preset/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	},
	"build": {
		"productName": "TSR-Bridge",
		"appId": "tv.superfly.tsr-bridge",
		"mac": {
			"category": "public.app-category.utilities",
			"hardenedRuntime": true,
			"gatekeeperAssess": false,
			"entitlements": "entitlements.mac.plist",
			"entitlementsInherit": "entitlements.mac.plist",
			"extraFiles": [
				{
					"from": "../../node_modules/sharp/vendor/8.13.3/darwin-x64/lib",
					"to": "Frameworks",
					"filter": [
						"!glib-2.0/**/*"
					]
				}
			]
		},
		"win": {
			"extraFiles": [
				{
					"from": "../../node_modules/sharp/build/Release",
					"to": ".",
					"filter": [
						"lib*.dll"
					]
				}
			]
		},
		"linux": {
			"extraFiles": [
				{
					"from": "../../node_modules/sharp/vendor/8.13.3/linux-x64/lib",
					"to": ".",
					"filter": [
						"libvips*.so.*"
					]
				}
			]
		},
		"dmg": {
			"artifactName": "TSR-Bridge ${version} macOS Installer.${ext}"
		},
		"nsis": {
			"artifactName": "TSR-Bridge ${version} Windows Installer.${ext}"
		},
		"appImage": {
			"artifactName": "TSR-Bridge ${version} Linux Executable.${ext}"
		},
		"afterSign": "tools/notarize.js",
		"electronVersion": "19.1.6",
		"files": [
			"dist/**/*"
		],
		"extraResources": [
			"assets/**/*"
		]
	}
}
