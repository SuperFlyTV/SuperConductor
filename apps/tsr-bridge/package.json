{
	"name": "tsr-bridge",
	"private": true,
	"version": "0.11.0",
	"description": "A companion app to SuperConductor, to handle playout on another computer",
	"main": "dist/main.js",
	"engines": {
		"node": "^16.16.0 || 18"
	},
	"scripts": {
		"build": "rimraf ./dist && tsc && webpack",
		"build:binary": "electron-builder",
		"start": "yarn build && electron dist/main.js",
		"react:dev": "webpack serve --mode=development",
		"electron:dev": "nodemon",
		"dev": "concurrently --kill-others \"yarn react:dev\" \"yarn electron:dev\"",
		"precommit": "lint-staged",
		"lint:raw": "eslint --ext .ts --ext .js --ext .tsx --ext .jsx --ignore-pattern dist"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/SuperFlyTV/SuperConductor.git"
	},
	"author": {
		"name": "SuperFlyTV AB",
		"email": "info@superfly.tv",
		"url": "https://superfly.tv"
	},
	"license": "AGPL-3.0-or-later",
	"devDependencies": {
		"@types/node": "^18.11.9",
		"@types/react-toggle": "^4.0.3",
		"@types/triple-beam": "^1.3.2",
		"concurrently": "^7.5.0",
		"css-loader": "^6.7.2",
		"electron": "^19.1.6",
		"electron-builder": "^23.6.0",
		"electron-notarize": "^1.2.2",
		"html-webpack-plugin": "^5.5.0",
		"node-loader": "^2.0.0",
		"nodemon": "^2.0.20",
		"rimraf": "^3.0.2",
		"sass": "^1.56.1",
		"sass-loader": "^13.2.0",
		"style-loader": "^3.3.1",
		"ts-loader": "^9.4.1",
		"webpack": "^5.75.0",
		"webpack-cli": "^4.10.0",
		"webpack-dev-server": "^4.11.1"
	},
	"dependencies": {
		"@mui/material": "^5.10.14",
		"@shared/api": "^0.11.0",
		"@shared/lib": "^0.11.0",
		"@shared/models": "^0.11.0",
		"@shared/server-lib": "^0.11.0",
		"@shared/tsr-bridge": "^0.11.0",
		"classnames": "^2.3.2",
		"electron-is-dev": "^2.0.0",
		"electron-updater": "^5.3.0",
		"lodash": "^4.17.21",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-icons": "^4.6.0",
		"react-scroll-to-bottom": "^4.2.0",
		"react-toggle": "^4.1.3",
		"short-uuid": "^4.2.2",
		"winston": "^3.8.2",
		"winston-transport": "^4.5.0"
	},
	"prettier": "@sofie-automation/code-standard-preset/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	},
	"build": {
		"productName": "TSR-Bridge",
		"appId": "tv.superfly.tsr-bridge",
		"mac": {
			"category": "public.app-category.utilities",
			"hardenedRuntime": true,
			"gatekeeperAssess": false,
			"entitlements": "entitlements.mac.plist",
			"entitlementsInherit": "entitlements.mac.plist",
			"extraFiles": [
				{
					"from": "../../node_modules/sharp/vendor/8.13.3/darwin-x64/lib",
					"to": "Frameworks",
					"filter": [
						"!glib-2.0/**/*"
					]
				}
			]
		},
		"win": {
			"extraFiles": [
				{
					"from": "../../node_modules/sharp/build/Release",
					"to": ".",
					"filter": [
						"lib*.dll"
					]
				}
			]
		},
		"linux": {
			"extraFiles": [
				{
					"from": "../../node_modules/sharp/vendor/8.13.3/linux-x64/lib",
					"to": ".",
					"filter": [
						"libvips*.so.*"
					]
				}
			]
		},
		"dmg": {
			"artifactName": "TSR-Bridge ${version} macOS Installer.${ext}"
		},
		"nsis": {
			"artifactName": "TSR-Bridge ${version} Windows Installer.${ext}"
		},
		"appImage": {
			"artifactName": "TSR-Bridge ${version} Linux Executable.${ext}"
		},
		"afterSign": "tools/notarize.js",
		"electronVersion": "19.1.6",
		"files": [
			"dist/**/*"
		],
		"extraResources": [
			"assets/**/*"
		]
	}
}
