{
	"name": "tsr-bridge",
	"private": true,
	"version": "0.12.0-alpha.5",
	"description": "A companion app to SuperConductor, to handle playout on another computer",
	"main": "dist/main.mjs",
	"type": "module",
	"engines": {
		"node": "20"
	},
	"scripts": {
		"build": "run -B -T rimraf ./dist && run -B -T tsc && vite build",
		"build:binary": "electron-builder",
		"start": "yarn build && electron dist/main.mjs",
		"react:dev": "vite",
		"electron:dev": "nodemon",
		"dev": "concurrently --kill-others \"yarn react:dev\" \"yarn electron:dev\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/SuperFlyTV/SuperConductor.git"
	},
	"author": {
		"name": "SuperFlyTV AB",
		"email": "info@superfly.tv",
		"url": "https://superfly.tv"
	},
	"license": "AGPL-3.0-or-later",
	"devDependencies": {
		"@types/react-toggle": "^4.0.5",
		"@types/triple-beam": "^1.3.5",
		"@vitejs/plugin-react": "^4.3.2",
		"concurrently": "^7.6.0",
		"electron": "32.2.0",
		"electron-builder": "24.13.3",
		"electron-notarize": "^1.2.2",
		"nodemon": "^2.0.22",
		"sass": "^1.79.4",
		"vite": "^5.4.8"
	},
	"dependencies": {
		"@babel/core": "^7.25.8",
		"@mui/material": "^5.16.7",
		"@shared/api": "^0.12.0-alpha.5",
		"@shared/lib": "^0.12.0-alpha.5",
		"@shared/models": "^0.12.0-alpha.5",
		"@shared/server-lib": "^0.12.0-alpha.5",
		"@shared/tsr-bridge": "^0.12.0-alpha.5",
		"classnames": "^2.5.1",
		"electron-updater": "^6.3.9",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-icons": "^5.3.0",
		"react-scroll-to-bottom": "^4.2.0",
		"react-toggle": "^4.1.3",
		"short-uuid": "^5.2.0",
		"winston": "^3.15.0",
		"winston-transport": "^4.8.0"
	},
	"build": {
		"productName": "TSR-Bridge",
		"appId": "tv.superfly.tsr-bridge",
		"npmRebuild": false,
		"nodeGypRebuild": false,
		"mac": {
			"category": "public.app-category.utilities",
			"hardenedRuntime": true,
			"gatekeeperAssess": false,
			"entitlements": "entitlements.mac.plist",
			"entitlementsInherit": "entitlements.mac.plist",
			"extraFiles": [
				{
					"from": "../../node_modules/sharp/vendor/8.13.3/darwin-x64/lib",
					"to": "Frameworks",
					"filter": [
						"!glib-2.0/**/*"
					]
				}
			]
		},
		"win": {
			"extraFiles": [
				{
					"from": "../../node_modules/sharp/build/Release",
					"to": ".",
					"filter": [
						"lib*.dll"
					]
				}
			]
		},
		"linux": {
			"extraFiles": [
				{
					"from": "../../node_modules/sharp/vendor/8.13.3/linux-x64/lib",
					"to": ".",
					"filter": [
						"libvips*.so.*"
					]
				}
			]
		},
		"dmg": {
			"artifactName": "TSR-Bridge ${version} macOS Installer.${ext}"
		},
		"nsis": {
			"artifactName": "TSR-Bridge ${version} Windows Installer.${ext}"
		},
		"appImage": {
			"artifactName": "TSR-Bridge ${version} Linux Executable.${ext}"
		},
		"afterSign": "tools/notarize.cjs",
		"files": [
			"dist/**/*",
			"build/**/*"
		],
		"extraResources": [
			"assets/**/*"
		]
	}
}
